<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- mybatis 관련 설정파일 resource/mybatis.Spring.xml -->
<configuration>
	<typeAliases>
		<!-- DTO를 alias(별명)으로 세팅 -->		
		<typeAlias alias="mem" type="javarajob.vo.Account"/>
		<typeAlias alias="schmem" type="javarajob.vo.Account_Sch"/>
		<!-- mapper에 쓰이는 공통 dto나 vo에 대한 선언을 별칭(alias) 으로 쓰이게 했다. -->
		<typeAlias alias="company" type="javarajob.vo.Company" />
		<typeAlias alias="companySch" type="javarajob.vo.Company_Sch" />
		<typeAlias alias="career" type="javarajob.vo.Career"/>
		<typeAlias alias="careerSch" type="javarajob.vo.Career_Sch"/>
	</typeAliases>
	<mappers>
		<mapper resource="resource/AccountMapper.xml"/>
		<mapper resource="resource/CompanyMapper.xml" />
		<mapper resource="resource/CareerMapper.xml" />
	</mappers>
</configuration>